<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Instructions Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#343444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📖 Instructions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/textViewAppOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OffCrypt is a secure encryption application that provides multiple encryption methods for your messages and files.\n\nVisit https://dev-offcode.com for more information."
                android:textSize="16sp"
                android:textColor="#E8E8E8"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Password Encryption Instructions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#343444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔑 Password Encryption"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Use strong passwords for better security\n• Generated passwords are cryptographically secure\n• Messages can have expiration times\n• AES-256-GCM encryption with PBKDF2 key derivation"
                android:textSize="14sp"
                android:textColor="#E8E8E8"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RSA Encryption Instructions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#343444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🔐 RSA Encryption"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Generate RSA-2048 or RSA-4096 key pairs\n• Share your public key with recipients\n• Supports Perfect Forward Secrecy (PFS)\n• Digital signatures for message authentication\n• Hybrid encryption with AES-256-GCM"
                android:textSize="14sp"
                android:textColor="#E8E8E8"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- File Encryption Instructions -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#343444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📁 File Encryption"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Encrypt any file type with password or RSA\n• Secure deletion of original files\n• Metadata stripping for privacy\n• File expiration support\n• Encryption verification"
                android:textSize="14sp"
                android:textColor="#E8E8E8"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Security Features -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="#343444">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🛡️ Security Features"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Burn-after-reading messages\n• Perfect Forward Secrecy (PFS)\n• Digital signatures\n• Message expiration\n• Secure memory management\n• Hardware security support"
                android:textSize="14sp"
                android:textColor="#E8E8E8"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
