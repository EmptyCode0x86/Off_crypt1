<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Dark" parent="Theme.Material3.Dark">
        <!-- VÃ¤rit -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryVariant">#222222</item>
        <item name="colorOnPrimary">#ffffff</item>
        <item name="colorSecondary">#555555</item>
        <item name="colorOnSecondary">#ffffff</item>
        <!-- Tausta ja teksti -->
        <item name="android:windowBackground">#222222</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Button.DarkRounded" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#444444</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.App.Dark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.Dark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Transparent theme for unlock activity -->
    <style name="Theme.Translucent" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Card style -->
    <style name="CardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Button styles -->
    <style name="ButtonSuccess">
        <item name="android:backgroundTint">@color/button_success</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ButtonDanger">
        <item name="android:backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonInfo">
        <item name="android:backgroundTint">@color/button_info</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>